# Tribal App Environment Configuration
# Copy this to .env.local for development or .env.production for production

# =============================================================================
# API CONFIGURATION
# =============================================================================

# API Base URL - Your deployed tribal-registry server
# Development: http://localhost:8080
# Production: https://your-api.railway.app
VITE_API_URL=http://localhost:8080

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Enable/disable features for different environments
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_DEBUG=false
VITE_ENABLE_MOCK_DATA=false
VITE_ENABLE_OFFLINE_MODE=false

# =============================================================================
# THIRD-PARTY SERVICES
# =============================================================================

# Google Analytics (optional)
VITE_GA_MEASUREMENT_ID=

# Sentry for error tracking (optional)
VITE_SENTRY_DSN=

# Hotjar for user analytics (optional)
VITE_HOTJAR_ID=

# =============================================================================
# UI CONFIGURATION
# =============================================================================

# App branding
VITE_APP_NAME=Tribal
VITE_APP_DESCRIPTION=Graph-based development collaboration platform
VITE_APP_VERSION=1.0.0

# Theme configuration
VITE_DEFAULT_THEME=light
VITE_ENABLE_DARK_MODE=true

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================

# Development-only settings (ignored in production builds)
VITE_DEV_AUTO_LOGIN=false
VITE_DEV_SKIP_AUTH=false
VITE_DEV_MOCK_RESPONSES=false

# =============================================================================
# PERFORMANCE CONFIGURATION
# =============================================================================

# Maximum file upload size (in bytes)
VITE_MAX_FILE_SIZE=10485760

# Graph rendering limits
VITE_MAX_NODES_DISPLAY=1000
VITE_MAX_EDGES_DISPLAY=2000

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# Token storage settings
VITE_TOKEN_STORAGE_KEY=tribal_token
VITE_SECURE_STORAGE=false

# Session configuration
VITE_SESSION_TIMEOUT=86400000

# =============================================================================
# NOTES
# =============================================================================

# 1. All VITE_ prefixed variables are embedded in the build and visible to users
# 2. Never include sensitive secrets in frontend environment variables
# 3. Use different values for development, staging, and production
# 4. Update VITE_API_URL to match your deployed backend
# 5. Consider enabling analytics and error tracking for production